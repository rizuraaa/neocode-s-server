<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Nominal</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label>Nama Koin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option>Pilih Koin</option>
                    <option <%= nominal.coinName === 'Gold' ? 'selected' : '' %> value="Gold">Gold</option>
                    <option <%= nominal.coinName === 'Diamond' ? 'selected' : '' %> value="Diamond">Diamond</option>
                    <option <%= nominal.coinName === 'Acoin' ? 'selected' : '' %> value="Acoin">Acoin</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input
                    type="number"
                    name="coinQuantity"
                    id="coinQuantity"
                    class="form-control"
                    placeholder="Masukkan jumlah koin"
                    required
                    value="<%= nominal.coinQuantity %>"
                  />
                </div>

                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    name="price"
                    id="price"
                    class="form-control"
                    placeholder="Masukkan harga"
                    required
                    value="<%= nominal.price %>"
                  />
                </div>

                <button type="submit" class="btn btn-primary">Simpan</button>
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
